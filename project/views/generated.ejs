<% include shared/header.ejs %>

<div>


</div>


<div>

    <h3>Search results for <span id="name"><%= name %></span> : <span id="mId"><%= mId %></span></h3>

    <table class="scrollTable table table-bordered table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>name</th>
            <th>description</th>
            <th>add</th>
        </tr>
        </thead>
        <tbody>
        <%
        for( let i = 0; i < 10; i++){
        %>
        <tr>
            <td><%= data[i].id %></td>
            <td><%= data[i].name %></td>
            <td><%= data[i].description %></td>

            <!-- Api string voor description bevat <P> tags -->

            <td>
                <button type="button" class="addButton" id="<%= data[i].id %>">Add</button>
            </td>
        </tr>
        <%
        } %>
        </tbody>
    </table>

    <%
    if(locals.id)
    {
    %>
    <form action="#" method="post" id="createEx">

        <label for="exName">Name your routine</label>
        <input type="text" name="exName" id="exName" required>
        <input type="number" readonly hidden value="<%= locals.id %>" id="iNr">
        <input type="submit" value="create">

    </form>
    <span id="error" class="hidden">Max routine size is 10</span>
    <%
    }else{
        %>
    <a href="/register">Register now to save your routine!</a>
    <%
    }
    %>

</div>


<a href="/routes/generator.js"></a>
<% include shared/footer.ejs %>

<script src="/javascript/listScript.js"></script>
</html>